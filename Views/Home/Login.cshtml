@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<div class="login-container">
    <link href="~/css/Login.css" rel="stylesheet">
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <script src="~/js/jquery/LoginApi.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <h1 class="login-text">
        <img src="~/image/icon.png" alt="image" class="login-image" />
        <span>Skill Sheet</span>
    </h1>
    <form id="loginForm" class="login-form" method="post" action="/api/Login">
        <div class="input-group">
            <img src="~/image/username.png" alt="image" class="login-image1" />
            <input type="text" id="username" placeholder="User name" class="login-textinput input" name="UserName" maxlength="50" required />
        </div>
        <div class="input-group">
            <img src="~/image/password.png" alt="image" class="login-image2" />
            <input type="password" id="password" placeholder="Password" class="login-textinput1 input" name="Password" required />
            <span class="password-toggle-icon">
                <i class="fas fa-eye" id="togglePassword"></i>
            </span>
        </div>
        <div class="login-checkbox-group">
            <input type="checkbox" class="login-checkbox" />
            <label class="login-text09" style="margin-left: 10px">Remember Me</label>
        </div>
        <button type="submit" class="login-button button" style="background-color: cyan">
            <span>
                <span>Login</span>
                <br />
            </span>
        </button>
        <button type="reset" class="login-button1 button" style="background-color: red">
            <span>
                <span>Reset</span>
                <br />
            </span>
        </button>
    </form>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/js/login.js"></script>

</html>